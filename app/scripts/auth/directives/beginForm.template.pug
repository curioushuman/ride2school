md-content(layout-padding, layout='column')
  md-card(md-colors="{background: 'default-accent-hue-2'}")
    md-card-title(md-colors="::{backgroundColor: 'default-accent-hue-1'}")
      md-card-title-text.md-headline
        | Begin your journey
    md-card-content(layout='row', layout-xs='column')
      div(flex, flex-gt-xs='50')
        h4.md-subhead Which school are you representing?
        md-input-container.md-block(flex)
          label Your school
          md-select(ng-model='user.school')
            md-option(ng-repeat='school in schools', value='{{ school.id }}')
              | {{ school.name }}
        div(layout='row', layout-xs='column')
          div(flex, flex-gt-xs='50')
            md-input-container.md-block(flex, flex-gt-xs='75')
              label Your class
              input(ng-model='user.class')
          div(flex)
            md-input-container.md-block(flex, flex-gt-xs='75')
              label How many kids in your class?
              input(ng-model='user.class_count')
      div(flex, layout='row', layout-xs='column')
        div(flex, flex-gt-xs='50', layout='column' layout-align='start center')
          p Student
          i.material-icons.md-light.r2s-icon-size-48 face
          md-button.md-raised(
            aria-label='Begin',
            ng-click='beginStudent()',
            ng-hide='studentBegun')
            | Begin
          div(ng-show='studentBegun', layout='column', layout-align='start center')
            md-input-container
              label Codename
              input(ng-model='user.student.codename')
            md-button.md-raised(aria-label='Confirm') Confirm
        div(flex, flex-gt-xs='50', layout='column' layout-align='start center')
          p Teacher
          i.material-icons.md-light.r2s-icon-size-48 face
          md-button.md-raised(
            aria-label='Begin',
            ng-click='beginTeacher()',
            ng-hide='teacherBegun')
            | Begin
          div(ng-show='teacherBegun', layout='column', layout-align='start center')
            md-input-container
              label Codename
              input(ng-model='user.teacher.codename')
            md-input-container
              label Email
              input(ng-model='user.teacher.email', type='email')
            md-button.md-raised(aria-label='Confirm') Confirm
